  <span class="navbar-brand mb-0 h1"><i class="fas fa-bed"></i> <span class="service-name">レコレぽ<span></span>
<% end %>
<div class="navber-sub-menu" >
  <% if user_signed_in? %>
    <%= link_to "記録", home_index_path, class:"header-menu" %> 
    <%= link_to "キーワード登録", new_user_word_path(current_user), class:"header-menu" %>
    <%= link_to "キーワード一覧", user_words_path(current_user), class:"no-underline header-menu" %>
